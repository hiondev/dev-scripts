#!/bin/bash
SCRIPT_PATH=$(dirname "$0")
ENVIRONMENT=$1
COMMAND=$2

# If the command is not specified, print the help
if [[ -z "$ENVIRONMENT" || -z "$COMMAND" ]]
then
    echo "Usage: $0 <environment> <command>"
    echo
    echo "Commands:"
    echo "  up"
    echo "  down"
    echo "  exec"
    echo "  local-db-export"
    echo "  local-db-import"
fi

source $SCRIPT_PATH/common/header
source $SCRIPT_PATH/common/environment $ENVIRONMENT
